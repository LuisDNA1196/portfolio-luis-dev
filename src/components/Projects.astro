---
import GitHub from "./icons/GitHub.astro"
import NextJS from "./icons/NextJS.astro"
import React from "./icons/React.astro"
import Tailwind from "./icons/Tailwind.astro"
import Web from "./icons/Web.astro"
import LinkButton from "./LinkButton.astro"

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  REACT: {
    name: "React",
    class: "bg-[#103673] text-white",
    icon: React,
  },
}
const PROJECTS = [
  {
    title: "Secretaria de Turismo - WebPage for Secretaria de turimo",
    description:
      "An update of Sectur's webpage, enhancing user experience, and making registration easier for users.",
    link: "https://svgl.vercel.app/",
    github: "",
    image: "/projects/sectur.png",
    tags: [TAGS.NEXT, TAGS.TAILWIND, TAGS.REACT],
  },
  {
    title: "Grupo Oncologico - Landing Page for Medical Doctor",
    description:
      "Plataforma gratuita con retos de programaci칩n. M치s de 1 mill칩n de visitas en un mes. +50K retos completados. Creada desde cero con Next.js, React y Tailwind CSS",
    link: "https://heupshop.vercel.app/",
    image: "/projects/heuptienda.webp",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
]
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article>
        <h3 class="text-2xl font-semibold text-yellow-800 dark:text-green-400/90 mb-2">
          {title}
        </h3>
        <p class="text-lg mb-4 text-pretty">{description}</p>
        <ul class="flex gap-x-2 flex-row mb-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>
        <img
          loading="lazy"
          class="rounded shadow-2xl shadow-white/10 aspect-video"
          src={image}
          alt={`Captura de pantalla del proyecto ${image}`}
        />
        <footer class="flex gap-x-4 items-end justify-end mt-4">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-6" />
              Ver c칩digo fuente
            </LinkButton>
          )}
          <LinkButton href={link}>
            <Web/>
            Ir al sitio web
          </LinkButton>
        </footer>
      </article>
    ))
  }
</div>
