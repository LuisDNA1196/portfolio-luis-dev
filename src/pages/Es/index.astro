---
import Layout from '../../layouts/Es/Layout.astro'

import Sobremi from "../../components/Es/Sobremi.astro"
import Experience from "../../components/Es/Experience.astro"
import Projects from "../../components/Es/Projects.astro"
import Contactme from "../../components/Es/Contactme.astro"
import Badge from "../../components/Badge.astro"
import Briefcase from "../../components/icons/Briefcase.astro"
import CodeIcon from "../../components/icons/Code.astro"
import GitHubIcon from "../../components/icons/GitHub.astro"
import LinkedInIcon from "../../components/icons/LinkedIn.astro"
import MailIcon from "../../components/icons/Mail.astro"
import ProfileCheck from "../../components/icons/ProfileCheck.astro"
import Contact from "../../components/icons/Contact.astro"
import SectionContainer from "../../components/SectionContainer.astro"
import SocialPill from "../../components/SocialPill.astro"
---

<Layout
  title="Porfolio de LuisDNA - Desarrollador y Programador Web "
  description="Contrata a Luis Narvaez para crear tu aplicación web o móvil"
>
  <main class="px-4">
    <SectionContainer class=" flex-wrap flex py-44 pb-20" id="Home">
      <img
        class="rounded-full size-16 mr-2 mb-4"
        src="https://avatars.githubusercontent.com/u/127688214?v=4"
        alt="LuisDNA photo"
      />
      <h1
        class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10 mt-2"
      >
        Hola, soy Luis Narvaez <a
          href="https://www.linkedin.com/in/luisdna96/"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center hover:scale-105 transition"
        >
          <Badge>Open to Work</Badge>
        </a>
      </h1>
      <h2
        class="text-xl lg:text-2xl text-pretty max-w-[700px] text-white"
      >
      <span class="text-yellow-200"
      >
        Desarrollador Web</span>
        <span>Front End</span>
        .<span class="text-red-200">
          De Guadalajara Mexico</span
        >.
        <span class="text-sky-200"
          >Experiencias Unicas y eficientes.</span
        >
      </h2>

      <nav class="flex gap-4 mt-8 flex-wrap">
        <SocialPill href="https://www.linkedin.com/in/luisdna96/">
          <LinkedInIcon class="size-4 md:size-6" />
          LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/LuisDNA1196/">
          <GitHubIcon class="size-4 md:size-6" />
          GitHub
        </SocialPill>
        <SocialPill href="mailto:luisdna96../..gmail.com">
          <MailIcon class="size-4 md:size-6" />
          Email me!
        </SocialPill>
      </nav>
    </SectionContainer>

    <SectionContainer id="experiencia">
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-white/90"
      >
        <Briefcase class="size-7" />
        Experiencia Laboral
      </h2>
      <Experience />
    </SectionContainer>

    <SectionContainer id="proyectos">
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-white/80"
      >
        <CodeIcon class="size-7" />
        Proyectos
      </h2>
      <Projects />
    </SectionContainer>

    <SectionContainer id="sobre-mi">
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-white/80"
      >
        <ProfileCheck class="size-7" />
        Sobre mi
      </h2>
      <Sobremi />
    </SectionContainer>
    <SectionContainer id="contacto" class="">
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-white/80"
      >
        <Contact class="size-7" />
        Contactame!
      </h2>
      <Contactme />
    </SectionContainer>
  </main>
</Layout>
