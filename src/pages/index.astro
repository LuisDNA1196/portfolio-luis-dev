---
import Layout from "@/layouts/Layout.astro"

import AboutMe from "@/components/AboutMe.astro"
import Badge from "@/components/Badge.astro"
import Briefcase from "@/components/icons/Briefcase.astro"
import CodeIcon from "@/components/icons/Code.astro"
import Experience from "@/components/Experience.astro"
import GitHubIcon from "@/components/icons/GitHub.astro"
import LinkedInIcon from "@/components/icons/LinkedIn.astro"
import MailIcon from "@/components/icons/Mail.astro"
import ProfileCheck from "@/components/icons/ProfileCheck.astro"
import Contact from "@/components/icons/Contact.astro"
import Projects from "@/components/Projects.astro"
import SectionContainer from "@/components/SectionContainer.astro"
import SocialPill from "@/components/SocialPill.astro"
import Contactme from "@/components/Contactme.astro"
---

<Layout
  title="Porfolio de LuisDNA - Desarrollador y Programador Web "
  description="Contrata a Luis Narvaez para crear tu aplicación web o móvil"
>
  <main class="px-4">
    <SectionContainer class=" flex-wrap flex py-44 pb-20" id="Home">
      <img
        class="rounded-full size-16 mr-2 mb-4"
        src="https://avatars.githubusercontent.com/u/127688214?v=4"
        alt="LuisDNA photo"
      />
      <h1
        class="text-gray-900 dark:text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10 mt-2"
      >
        Hi, I'm Luis Narvaez <a
          href="https://www.linkedin.com/in/luisdna96/"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center hover:scale-105 transition"
        >
          <Badge>Open to Work</Badge>
        </a>
      </h1>
      <h2
        class="text-xl lg:text-2xl text-pretty max-w-[700px] text-black dark:text-white"
      >
        <span>Front End</span><span
          class="text-yellow-800 dark:text-yellow-200"
        >
          Web Developer</span
        >
        .<span class="text-red-800 dark:text-red-200">
          From Guadalajara Mexico</span
        >.
        <span class="text-sky-800 dark:text-sky-200"
          >Efficient and unique experiences</span
        >
      </h2>

      <nav class="flex gap-4 mt-8 flex-wrap">
        <SocialPill href="https://www.linkedin.com/in/luisdna96/">
          <LinkedInIcon class="size-4 md:size-6" />
          LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/LuisDNA1196/">
          <GitHubIcon class="size-4 md:size-6" />
          GitHub
        </SocialPill>
        <SocialPill href="mailto:luisdna96@gmail.com">
          <MailIcon class="size-4 md:size-6" />
          Email me!
        </SocialPill>
      </nav>
    </SectionContainer>

    <SectionContainer id="experiencia">
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white/90"
      >
        <Briefcase class="size-7" />
        Experiencia laboral
      </h2>
      <Experience />
    </SectionContainer>

    <SectionContainer id="proyectos">
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white/80"
      >
        <CodeIcon class="size-7" />
        Projects
      </h2>
      <Projects />
    </SectionContainer>

    <SectionContainer id="sobre-mi">
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white/80"
      >
        <ProfileCheck class="size-7" />
        About me
      </h2>
      <AboutMe />
    </SectionContainer>
    <SectionContainer id="contacto" class="">
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white/80"
      >
        <Contact class="size-7" />
        Contact Me!
      </h2>
      <Contactme />
    </SectionContainer>
  </main>
</Layout>
